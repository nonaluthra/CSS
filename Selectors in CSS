<style>
    p {
        color: red;
        /*element selector*/

    }

    #redElement {
        color: red;
        /*id selector*/

    }

    .blueBg {
        color: blue;
        /*class selector*/

    }

    footer,
    span {
        color: lightgreen;
        background-color: blueviolet;
    }

    /* grouping selector */
    p {
        border: 2px solid yellow;
    }

    /*to apply border*/
</style>

